#CC=arm-linux-gnueabi-gcc
BUILDROOT_HOME=/home/jason/buildroot-2021.05
CC=$(BUILDROOT_HOME)/output/host/usr/bin/arm-linux-gcc
CCFLAGS=--sysroot=$(BUILDROOT_HOME)/output/staging
INCLUDES=
LFLAGS=
LIBS=-lcurl -uClibc -lc

SRC=update.c
OBJ=$(SRC:.c=.o)
MAIN=update_temperatures

RM=rm - rf

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

$(MAIN): $(OBJ)
	$(CC) $(CCFLAGS) $(INCLUDES) -o $(MAIN) $(OBJ) $(LFLAG) $(LIBS)

all: $(MAIN)

clean:
	$(RM) $(MAIN) *.o *~
